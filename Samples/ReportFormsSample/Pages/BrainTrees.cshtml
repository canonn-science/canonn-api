@page
@model BrainTreesModel
@using FormFactory
@using FormFactory.AspMvc
@{
	ViewData["Title"] = "Report Brain Trees";
}

<div class="row justify-content-md-center">
	<div class="col-md-auto">

		<h2>@ViewData["Title"]</h2>
		<h3>@Model.Message</h3>

		<p>Use this area to provide additional information.</p>

		<form method="post">

			<div class="form-group">
				@FF.PropertiesFor(Model.FormModel).Render(Html)
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-primary">Report Brain Trees</button>
			</div>

		</form>

		<h3>DEBUG: @Model.Debug</h3>
	</div>
</div>
