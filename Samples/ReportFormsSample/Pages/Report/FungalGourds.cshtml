@page
@model Report.FungalGourdsModel
@using FormFactory
@using FormFactory.AspMvc
@{
	ViewData["Type"] = "Fungal Gourds";
}
<div class="row justify-content-md-center">
	<div class="col-md-auto">

		<h2>Canonn Reporting Hub - @ViewData["Type"]</h2>
		<h3>@Model.Message</h3>

		<p>
			Please ensure you have the System & Body spelled correctly with proper spacing: (Example: <span style="font-family: monospace">HIP 12345 AB 3 E</span>).<br />
			Coordinates should be to the 4th decimal point with <b>no</b> rounding: (Example: -94.8720).<br />
			Latitude is the top coordinate, Longitude is the bottom coordinate.<br />
			Screenshots are required for data validation.
		</p>

		<form method="post">
			<div class="form-group">
				@FF.PropertiesFor(Model.FormData).Render(Html)
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Report @ViewData["Type"]</button>
			</div>
		</form>
	</div>
</div>
