@using FormFactory.AspMvc
@using FormFactory
@model PropertyVm
@{
	var defaultValue = Model.GetCustomAttributes().OfType<FormFactory.Attributes.DisplayAttribute>().Select(a => a.Prompt).FirstOrDefault() ?? Model.Value;
}
<input @Html.Raw(Model.Readonly()) @Html.Raw(Model.Disabled()) @Html.UnobtrusiveValidation(Model) class="form-control" id="@Model.Id" name="@Model.Name" size="30" type="text" value="@(defaultValue)" />